{
  "name": "sonarjs",
  "version": "0.2.0-1",
  "description": "the sonarjs npm module",
  "directories": {
    "lib": "lib"
  },
  "bin": "./bin/sonarjs",
  "scripts": {
    "test": "jest",
    "clear": "rm -rf lib",
    "build-mvn": "cd mini-scanner && mvn clean install && cd ..",
    "copy-jars":
      "mkdir lib && cp mini-scanner/target/mini-scanner-*-SNAPSHOT.jar lib/ && mkdir lib/plugins && cp mini-scanner/target/plugins/* lib/plugins/",
    "build":
      "yarn clear && yarn build-mvn && yarn copy-jars && yarn && tsc -p .",
    "postinstall": "./bin/install_jre.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonarSource/sonarjs-cli.git"
  },
  "keywords": ["sonarjs", "analyzer"],
  "author": "",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/SonarSource/sonarjs-cli/issues"
  },
  "homepage": "https://github.com/SonarSource/sonarjs-cli",
  "devDependencies": {
    "@types/node": "^8.0.54",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.3",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "progress": "^2.0.0",
    "request": "^2.83.0",
    "tar-fs": "^1.16.0"
  }
}
